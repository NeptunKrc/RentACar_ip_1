<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>RentACar Admin Panel</title>

    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <style>

        body {
            background: linear-gradient(135deg, #eef1f5, #dfe4ea);
            font-family: 'Segoe UI', sans-serif;
        }

        /* ---- SIDEBAR ---- */
        .sidebar {
            width: 260px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: linear-gradient(180deg, #1e272e, #2f3640);
            color: #f5f6fa;
            display: flex;
            flex-direction: column;
            padding: 30px 0;
            box-shadow: 3px 0 15px rgba(0,0,0,0.25);
        }

            .sidebar h2 {
                text-align: center;
                font-weight: 600;
                margin-bottom: 25px;
                letter-spacing: 1px;
            }

            .sidebar a {
                padding: 14px 24px;
                font-size: 15px;
                color: #ced6e0;
                display: block;
                transition: 0.25s;
            }

                .sidebar a:hover {
                    background: rgba(255,255,255,0.08);
                    color: white;
                    text-decoration: none;
                    padding-left: 34px;
                }

        /* ---- CONTENT ---- */
        .content {
            margin-left: 260px;
            padding: 30px;
        }

        /* ---- MODERN CARD ---- */
        .card-glass {
            background: rgba(255, 255, 255, 0.65);
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.12);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            margin-bottom: 30px;
        }

        .table-wrapper {
            background: white;
            border-radius: 12px;
            padding: 15px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        }

        th {
            background: #f1f2f6;
        }

        /* ---- BUTTONS ---- */
        .btn-modern {
            background: linear-gradient(135deg, #6c5ce7, #a29bfe);
            border: none;
            color: white;
            padding: 10px 16px;
            border-radius: 8px;
            transition: 0.25s;
        }

            .btn-modern:hover {
                opacity: 0.88;
                letter-spacing: 0.5px;
            }

    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h2>🚗 RentACar</h2>

        <a href="/Admin/Index">🏠 Ana Sayfa</a>
        <a href="/User/Index">👤 Personel Yönetimi</a>
        <a href="/Settings/Index">⚙ Ayarlar</a>
        <a href="/Car/Index">🚘 Araçlar</a>
        <a href="/FleetCar/Index">📦 Filo Yönetimi</a>
        <a href="/Account/Logout">🚪 Çıkış</a>
        <a href="/Reservations/Index">Rezervayson Talepleri</a> 
    </div>

    <!-- CONTENT -->
    <div class="content">
        <div class="card-glass">
            @RenderBody()
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/reservationHub")
            .build();

        connection.on("ReceiveReservationNotification", (message) => {

            const toast = document.createElement("div");
            toast.className = "toast align-items-center text-bg-primary border-0 show";
            toast.role = "alert";
            toast.style = `
                min-width: 280px;
                animation: slideIn .4s ease;
            `;

            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        <strong>Yeni Rezervasyon:</strong> ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        onclick="this.parentElement.parentElement.remove()"></button>
                </div>
            `;

            document.getElementById("toast-container").appendChild(toast);

            setTimeout(() => toast.remove(), 6000);
        });

        connection.start();

        // Animasyon
    </script>

    <style>
        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateX(50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }
    </style>

    <div id="toast-container" style="
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 99999;
    display: flex;
    flex-direction: column;
    gap: 10px;">
    </div>


</body>
</html>
