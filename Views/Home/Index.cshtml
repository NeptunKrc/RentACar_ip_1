@{
    ViewData["Title"] = "Araç Kiralama";
    var cars = ViewBag.Cars as List<RentACar_ip.Models.Car> ?? new List<RentACar_ip.Models.Car>();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<style>
    body {
        background: #f1f2f6;
        font-family: 'Segoe UI', sans-serif;
    }

    /* HERO */
    .hero {
        height: 420px;
        background: linear-gradient(120deg, rgba(255,90,0,0.70), rgba(0,0,0,0.45)), url('/images/cover.jpg') center/cover no-repeat;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        color: white;
        padding: 20px;
    }

        .hero h1 {
            font-size: 3.3rem;
            font-weight: 800;
        }

        .hero p {
            font-size: 1.2rem;
            opacity: .9;
        }

    /* REZERVASYON KARTI */
    .reservation-card {
        margin-top: -60px;
        background: #ffffff;
        padding: 35px;
        border-radius: 16px;
        box-shadow: 0px 12px 34px rgba(0,0,0,.12);
        animation: fadeIn .5s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(25px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-label {
        font-weight: 600;
        color: #444;
    }

    .form-control, .form-select {
        height: 52px;
        border-radius: 10px;
        border: 1px solid #dcdcdc;
        padding-left: 14px;
        font-size: .95rem;
        transition: .25s;
    }

        .form-control:focus, .form-select:focus {
            border-color: #ff6a00;
            box-shadow: 0 0 0 3px rgba(255,136,0,.25);
        }

    .btn-main {
        width: 100%;
        height: 54px;
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, #ff8800, #ff6a00);
        font-size: 1.15rem;
        font-weight: 700;
        color: #fff;
        transition: .3s;
        margin-top: 10px;
    }

        .btn-main:hover {
            transform: scale(1.03);
            opacity: .95;
        }

    /* CARD - FİLO GRID */
    .car-card {
        background: white;
        border-radius: 16px;
        padding: 15px;
        box-shadow: 0px 8px 20px rgba(0,0,0,.1);
        transition: .25s;
    }

        .car-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 28px rgba(0,0,0,.15);
        }

    footer {
        margin-top: 50px;
        padding: 30px;
        text-align: center;
        color: #666;
    }

</style>


<!-- HERO -->
<div class="hero">
    <h1>Araç Kiralamanın En Kolay Yolu</h1>
    <p>Hızlı rezervasyon, uygun fiyat, geniş araç filosu.</p>
</div>


<div class="container">

    <!-- FORM -->
    <div class="reservation-card">

        <h3 class="mb-4 fw-bold">Rezervasyon Talebi</h3>

        <form method="post" action="/Home/Reserve">

            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">TC Kimlik No *</label>
                    <input type="text" name="nationalId" maxlength="11" class="form-control" required />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Ad Soyad *</label>
                    <input type="text" name="fullName" class="form-control" required />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Telefon *</label>
                    <input type="text" name="phone" class="form-control" required />
                </div>

                <div class="col-md-3">
                    <label class="form-label">E-posta</label>
                    <input type="email" name="email" class="form-control" />
                </div>
            </div>

            <div class="row g-3 mt-2">

                <div class="col-md-4">
                    <label class="form-label">Araç Seç *</label>
                    <select name="carId" class="form-select" required>
                        <option value="">Araç seçiniz</option>

                        @foreach (var c in cars)
                        {
                            var brand = c.Brand?.BrandName ?? "Marka Yok";
                            var price = c.DailyPrice.ToString("N0");

                            <option value="@c.Id">@brand @c.ModelName — (@price ₺ / gün)</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Başlangıç Tarihi *</label>
                    <input type="date" name="startDate" class="form-control" required />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Bitiş Tarihi *</label>
                    <input type="date" name="endDate" class="form-control" required />
                </div>

            </div>

            <button class="btn-main mt-4">Rezervasyon Oluştur</button>

        </form>
    </div>



    <!-- FİLOMUZ -->
    <h2 class="mt-5 mb-3 fw-bold">Filomuz</h2>

    <div class="row g-4">
        @foreach (var c in cars)
        {
            <div class="col-md-4">
                <div class="car-card">
                    <img src="/images/car-default.jpg" class="img-fluid rounded" />

                    <h5 class="mt-3 fw-bold">@c.Brand.BrandName @c.ModelName</h5>

                    <p class="text-muted m-0">@c.FuelType.FuelTypeName - @c.TransmissionType.TypeName</p>

                    <p class="fw-bold mt-2" style="color:#ff6a00;">
                        @c.DailyPrice.ToString("N0") ₺ / gün
                    </p>
                </div>
            </div>
        }
    </div>

</div>


<footer>
    © @DateTime.Now.Year RentACar • Tüm hakları saklıdır.
</footer>
