<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - RentACar</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <style>
        /* Navbar */
        .main-navbar {
            background: #ffffff;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 40px;
            box-shadow: 0 4px 14px rgba(0,0,0,0.08);
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .nav-logo {
            font-size: 24px;
            font-weight: 800;
            color: #ff6600;
            text-decoration: none;
        }

        .nav-links a {
            margin: 0 15px;
            font-weight: 600;
            color: #444;
            transition: .25s;
            text-decoration: none;
        }

            .nav-links a:hover {
                color: #ff6600;
            }

        .admin-btn {
            background: linear-gradient(135deg, #ff6600, #ff4500);
            color: #fff !important;
            padding: 10px 18px;
            border-radius: 10px;
            font-weight: 600;
            transition: .25s;
        }

            .admin-btn:hover {
                opacity: .85;
                transform: translateY(-2px);
            }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="main-navbar">
        <a href="/Home/Index" class="nav-logo">RentACar</a>

        <div class="nav-links">
            <a href="/Home/Index">Ana Sayfa</a>
            <a href="/Home/Index#reservation">Rezervasyon</a>
        </div>

        <a href="/Identity/Account/Login" class="admin-btn">Yönetici Girişi</a>
    </nav>

    <!-- ANA İÇERİ BURAYA GELECEK **RenderBody()** -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center py-4">
        <p class="text-muted">© @DateTime.Now.Year - RentACar</p>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
