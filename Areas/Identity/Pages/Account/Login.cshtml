@page
@model LoginModel

@{
    ViewData["Title"] = "Yönetici Girişi";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    body {
        background: linear-gradient(135deg, #ff7b00, #ff4800);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-box {
        width: 380px;
        background: white;
        padding: 35px;
        border-radius: 18px;
        box-shadow: 0 10px 35px rgba(0,0,0,.25);
        animation: fadeIn .5s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(25px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h2 {
        font-weight: 800;
        font-size: 1.8rem;
        text-align: center;
        margin-bottom: 25px;
        color: #333;
    }

    .form-control {
        height: 50px;
        border-radius: 10px;
    }

    .btn-login {
        height: 52px;
        background: linear-gradient(135deg, #ff7b00, #ff4800);
        border: none;
        font-size: 1.2rem;
        font-weight: 600;
        color: white;
        border-radius: 12px;
        transition: .3s;
        margin-top: 10px;
    }

        .btn-login:hover {
            opacity: .9;
            transform: scale(1.02);
        }

    .small-links {
        text-align: center;
        margin-top: 15px;
        font-size: .9rem;
    }

        .small-links a {
            color: #555;
            text-decoration: none;
        }

            .small-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-box">

    <h2>Yönetici Girişi</h2>

    <form id="account" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <label class="form-label">E-posta</label>
        <input asp-for="Input.Email" class="form-control mb-3" autocomplete="username" placeholder="admin@test.com" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <label class="form-label">Şifre</label>
        <input asp-for="Input.Password" class="form-control mb-3" autocomplete="current-password" placeholder="•••••" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <div class="form-check mb-3">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label asp-for="Input.RememberMe" class="form-check-label">Beni Hatırla</label>
        </div>

        <button id="login-submit" type="submit" class="btn-login w-100">Giriş Yap</button>

    </form>

    <div class="small-links text-muted mt-3">
        <span>Şifre unuttuysan yöneticinle iletişime geç.</span>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
